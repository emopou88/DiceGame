<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5DC">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gra w kości. Autor: Amelia Tosik"
        android:background="#A52A2A"
        android:textColor="#FFFFFF"
        android:textSize="23dp"
        android:padding="15dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonRollDice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RZUĆ KOŚCIAMI"
        android:background="#D2691E"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textViewDice1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="?"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/textViewDice2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="?"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/textViewDice3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="?"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/textViewDice4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="?"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/textViewDice5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="?"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynik tego losowania: 0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textViewGameScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynik gry: 0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textViewRollCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liczba rzutów: 0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonResetScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESETUJ WYNIK"
        android:background="#D2691E"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>